[Unit]
Description=AlmaLinux mirrors service (uWSGI backend)
After=syslog.target

[Service]
User={{ service_user }}
Group={{ service_user }}
Type=simple
Restart=on-failure
RestartSec=5
TimeoutStopSec=10
WorkingDirectory={{ source_path }}/src/backend
ExecStartPre=/usr/local/bin/mirror_service_backend.sh
ExecStart={{ source_path }}/bin/gunicorn -c {{ source_path }}/src/backend/gunicorn.py

[Install]
WantedBy=multi-user.target
